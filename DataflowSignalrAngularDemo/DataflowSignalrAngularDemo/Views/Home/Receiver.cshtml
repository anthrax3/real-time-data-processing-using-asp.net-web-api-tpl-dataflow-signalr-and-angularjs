@{
    ViewBag.Title = "Receiver";
}
<h3></h3>
<p>This view subscribes to the monitorHub</p>
<div data-ng-controller="monitorCtrl as wdgt">
    <span>Processor</span>
    <ul>
        <li ng-repeat="monitor in Processor">
            <div ng-class="{'btn btn-success' : monitor.Name=='ReceiverA','btn btn-info' : monitor.Name=='ReceiverB','btn btn-warning' : monitor.Name=='ReceiverC'}">
                <span class="bold">Name :</span>  {{monitor.Name}}
            </div>
            <div>
                <span class="bold">OrderID:</span> {{monitor.OrderId}}
            </div>
            <div>
                <span class="bold">Date Receipt:</span> {{monitor.Date}}
            </div>
        </li>
    </ul>
    <span>Sales Order Detail</span>
    <ul>
        <li data-ng-repeat="item in FileOrderEntities">

            <div>
                <span class="bold">SalesOrderDetailID :</span> {{item.SalesOrderDetailID }}
            </div>

            <div>
                <span class="bold">SalesPersonName:</span> {{item.SalesPersonName}}
            </div>

            <div>
                <span class="bold">CarrierTrackingNumber :</span> {{item.CarrierTrackingNumber }}
            </div>

            <div>
                <span class="bold">OrderQty :</span> {{item.OrderQty }}
            </div>

            <div>
                <span class="bold">PriceDiscount :</span> {{item.PriceDiscount }}
            </div>

            <div>
                <span class="bold">LineTotal :</span> {{item.LineTotal }}
            </div>

            <div>
                <span class="bold">Date :</span> {{item.Date }}
            </div>
        </li>
    </ul>
    <table>
        <tr data-ng-repeat="product in item.Products">
            <td>{{product.ProductID}}</td>
            <td>{{product.Price}}</td>
            <td>{{product.Qty}}</td>
        </tr>
    </table>
</div>
@section Scripts {
    <!-- Reference the autogenerated SignalR hub script -->
    <script src="~/signalr/hubs"></script>
}